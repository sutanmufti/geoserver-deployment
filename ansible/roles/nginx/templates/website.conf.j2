server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name geoserver.sutan.co.uk;

    # Directory used by Certbot to verify the domain
    root /var/www/letsencrypt;

    location /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
    }

    # Optional: Redirect everything else to HTTPS (only after cert installed)
    return 301 https://$host$request_uri;
}
